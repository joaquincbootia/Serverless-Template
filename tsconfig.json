{
	"compilerOptions": {
		"target": "ES2018",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"outDir": ".build",
		"rootDir": "./",
		"lib": ["es2018"],
		"sourceMap": true,
		"types": ["@types/aws-lambda"]
	},
	"include": ["./**/*.ts"],
	"exclude": ["node_modules/**/*", ".serverless/**/*", ".webpack/**/*", "_warmup/**/*", ".vscode/**/*"]
}
